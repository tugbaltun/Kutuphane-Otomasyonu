@using System.Data
@model DataSet
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <table cellpadding="0" cellspacing="0">
        <tr>
            <th>KitapAdı</th>
            <th>YazarAdı</th>
            <th>YayınYılı</th>
        </tr>
        @foreach (DataRow row in Model.Tables[0].Rows)
        {
            <tr>
                <td>@row["kitapAdi"]</td>
                <td>@row["Yazar1"]</td>
                <td>@row["YayinYili"]</td>
            </tr>
        }
    </table>
</body>
</html>
